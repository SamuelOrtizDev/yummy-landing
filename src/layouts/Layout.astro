---
	import "@fontsource/poppins";
	
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Yummy Design System for Rappi" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<main class="flex flex-col gap-[140px]">
			<slot />
		</main>
		<Footer/>
	</body>
</html>
<style is:global>

	html {
		font-family: "Poppins";
	}

	body {
		max-width: 1920px;
		margin: auto;
		position: relative;
	}
</style>
