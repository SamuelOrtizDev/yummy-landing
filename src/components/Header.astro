---
import Logo from './Logo.astro'

const navOptions = [
        {
            title: 'Brand Values',
            href: '#values-section'
        },
        {
            title: 'Overview',
            href: '#overview-section'
        },
        {
            title: 'Typography',
            href: '#typo-section'
        },
        {
            title: 'Icons',
            href: '#icon-section'
        },
        {
            title: 'Components',
            href: '#components-section'
        },
        {
            title: 'Team Members',
            href: '#team-section'
        },
        ]
---

<header class="flex items-center justify-between px-[64px] pt-4 w-full absolute top-0 text-white z-50">
    <Logo/>
    <nav class="flex gap-8">
        {
            navOptions.map(option => (
                <a class="transition-colors hover:text-green" href={option.href}>{option.title}</a>
            ))
        }
    </nav>
</header>